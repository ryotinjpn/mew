<div class="form-wrapper">
<h1>ユーザー情報設定</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-item">
    <%= f.label "ユーザー名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="form-item">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-item">
    <%= f.label "プロフィール" %><br />
    <%= f.text_area :profile, autofocus: true, autocomplete: "profile",class:"edit_textarea" %>
  </div>

  <div class="form-item">
    <%= f.label :youtube %><br />
    <%= f.text_area :youtube, autofocus: true, autocomplete: "youtube",class:"edit_textarea" %>
  </div>

  <div class="form-item">
    <%= f.label "プロフィール画像" %><br/>
    <%= f.file_field :image %>
  </div>
  

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-item">
    <%= f.label "パスワードを変更" %><em>(<%= @minimum_password_length %>文字以上)</em> <br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>      
    <% end %>
  </div>

  <div class="form-item">
    <%= f.label "新しいパスワードを再度入力" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="form-item">
    <%= f.label :current_password %> <i>(変更時現在のパスワードが必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="button-panel">
    <%= f.submit "保存", class: "button" %>
  </div>
<% end %>
  <br /><br /><div class="form-item">
    <p><%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  </div>

</div>