- if user_signed_in?
  .container
    .main_view
      .row
        .col-md-9
          = render 'shared/flash'
          = render 'shared/post_form'
          = render 'shared/feed'
        .col-md-3.hidden-xs.hidden-sm
          .main_right
            = render 'shared/post_search_form'
            .user_top
              - if current_user.image.blank?
                = link_to image_tag('usericon.png', class: 'icon_image_prof'), current_user
              - else
                = link_to image_tag(current_user.image.url, class: 'icon_image_prof'), current_user
              = link_to current_user.name, current_user, class: "user_top_name"
            .user_top2
              %span.recommended おすすめ
              %span.all_user= link_to "すべてを見る", users_path
            %ul.users
              = render @users
- else
  .center
    - provide(:title, "ホーム")
    .top_image
      = image_tag "cattop.jpg", class: "top_cat"
      .top_image2
        = image_tag "logo.png", class: "top_logo"
        = link_to "新規登録", new_user_registration_path, class: "top_btn"
