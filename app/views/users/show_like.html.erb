<% provide(:title, @user.name) %>
<div class="container">
  <div class="main_view">
    <div class="row">
      <div class="col-lg-9">
        <h3><%= @title %></h3>
        <% if @user.likes.any? %>
          <ol class="posts">
            <%= render @posts %>
          </ol>
          <%= will_paginate @posts %>
        <% end %>
      </div>
      <aside class="col-lg-3">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
      </aside>
    </div>
  </div>
</div>